#include<stdio.h>
void main()
{
   int a,b;
   char op;
   printf("enter two numbers");
   scanf("%d%d",&a,&b);
   printf("enter symbol");
   scanf(" %c",&op);
   switch(op)
   {
       case '+':printf("the sum is %d",a+b);
       break;
       case '-':printf("the minus is %d",a-b);
       break;
       case '*':printf("the multiplication is %d",a*b);
       break;
       case '/':printf("the division is %d",a/b);
       break;
       case '%':printf("the modulo division is %d",a%b);
       break;
   }
}
